<!DOCTYPE html>
<html>
	<head>
		<title>One</title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<p class="notice">
			<%= notice %>
		</p>
		<p class="alert">
			<%= alert %>
		</p>
		<div id="user_nav">
			<% if user_signed_in? %>
			Signed in as <%= current_user.email %>. Not you?
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
			<% else %>
				<%if  params[:controller] != "authentications" %>
					<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", authentications_path %>
				<% end %>
			<% end %>
		</div>
		<%= yield %>
	</body>
</html>
